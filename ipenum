#!/bin/bash

# Ensure the script is invoked with at least one argument
if [ $# -eq 0 ]; then
    echo "Usage: $0 <target_list_file>"
    exit 1
fi

TARGET_LIST=$1

# Create necessary directories and set permissions
mkdir -p shodan
chmod +rwx 

# Notify start of the process
echo "shodanx uncover started ips -->" | notify -silent -bulk

# Iterate over each target in the list
cat "$TARGET_LIST" | while read host; do
    # Run shodanx commands for various queries and append results to ip.txt
    shodanx domain -to 20 -ra -d "$host" -o ip.txt
    shodanx custom -to 20 -ra -cq "ssl:$host" -o ip.txt
    shodanx custom -to 20 -ra -cq "http.title:'$host'" -o ip.txt

    uncover -q '"ssl:$domain"' -silent -e shodan,zoomeye,netlas | anew ip.txt
    uncover -q '"hostname:$domain"' -silent -e shodan,zoomeye,netlas | anew ip.txt
    uncover -q '"http.title:$domain"' -silent -e shodan,zoomeye,netlas | anew ip.txt
done

# Perform favicon-hash operation using FavFreak and shodanx
cat "$TARGET_LIST" | while read host; do
    echo "$host" | httpx | python3 ~/tools/FavFreak/favfreak.py --shodan -o fav
    ls fav/* | tr -d fav/ | tr -d .txt | anew hash.txt
done

cat hash.txt | while read host; do
    shodanx custom -to 20 -ra -cq "http.favicon.hash:'$host'" -o ip.txt
    rm hash.txt
    rm -rf fav/
done

# Filter IPs from ip.txt based on host list
cat "$TARGET_LIST" | while read host; do
    cat ip.txt | sort -u|tlsx -san -cn -silent |grep  -F $host | grep -E -o '(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)' | anew ips.txt
done

# Clean up temporary files
rm ip.txt
